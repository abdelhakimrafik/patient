{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2021",
    "skipLibCheck": true,
    "removeComments": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "exclude": ["node_modules"],
}
